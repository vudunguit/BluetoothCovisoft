<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/layoutHeaderByte"
        layout="@layout/header_data_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rlSendSite"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/imgBtnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@android:drawable/ic_menu_send"/>
        <AutoCompleteTextView
            android:id="@+id/actvByteInput"
            android:maxLines="3"
            android:completionThreshold="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/imgBtnSend">
            <requestFocus/>
        </AutoCompleteTextView>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/svByteReceive"
        android:layout_below="@id/layoutHeaderByte"
        android:layout_above="@id/rlSendSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:id="@+id/tvByteStreamReceive"/>
    </ScrollView>
</RelativeLayout>